#include <stdio.h>
int main(){
int a, b, i;
float x;
a = 2;
b = 1;
printf("A = %d\n", a);
printf("B = %d\n", b);
printf("1 - Soma de 2 numeros\n");
printf("2 - Diferenca de 2 numeros :\n");
printf("3 - Produto entre 2 numeros :\n");
printf("4 - Divisao entre 2 numeros (Denominador diferente de zero):\n");

printf("Escolha uma opcao :\n");
scanf("%d", &i);

switch (i){

case 1:
	x = a +b;
	printf("%.2f", x);
	break;

case 2 :
	x = a - b;
	printf("%.2f", x);
	break;

case 3:
	x = a * b;
	printf("%.2f", x);
	break;

case 4:
	x = a / b;
	printf("%.2f", x);
	break;
}
return 0;
}

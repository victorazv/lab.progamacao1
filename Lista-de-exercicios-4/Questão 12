#include<stdio.h>
#include<conio.h>
#include<string.h>

int main(){	
	char nome[40],op,X;
	int i,j;
	
	printf("digite o nome do aluno: ");
	scanf("%c",nome);
	while (op != {'nao'}){
		printf("deseja inserir mais nome na lista?");
		scanf("%C",op);
		if(op== {'sim'}){
			printf("digite o nome do aluno');
			scanf("%c",nome);
		}
	}
	printf("digite o nome que precisa ser procurado");
	scanf("%c",X);
	for (i=0;i==39,i++){
		if(nome[i]==X){
			printf("%s",&nome,",posição: ",i);
		}
	}
	return 0;
} 

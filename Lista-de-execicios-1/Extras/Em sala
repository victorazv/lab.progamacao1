//Construa um programa que tendo um valor definido, leia um valor do usuário 
//e diga se o valor digitado é maior/igual ou menor que o valor definido

#include<stdio.h>

int main(){
	int x, y;
	y = 30;
	printf("Digite um valor X (inteiro) para saber se ele eh maior ou menor que um Y definido\n");
	scanf("%d", &x);
	if(x >= y){
		printf("O valor digitado eh maior ou igual!\n");
	}
	else{
		printf("O valor digitado eh menor !\n");		
	}
}

#include<stdio.h>

int main(){

int x,y,z;
x = y = z= 10;
	printf("%d, %d, %d", x,y,z);
z = (z++);
	printf("\n%d, %d, %d", x,y,z);
x = -x;,

	printf("\n%d, %d, %d", x,y,z);
y++;
	printf("\n%d, %d, %d", x,y,z);
x = x + y - (z--);
	printf("\n%d, %d, %d", x,y,z);
system("pause");
return 0;
}

#include<stdio.h>

int main(){

int a = 10, b = 1, c = 12;
printf("%d", (a>b+c));

system("pause");
//retorna 0
}


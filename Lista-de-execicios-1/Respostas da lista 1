#include<stdio.h>

float main(){
    float l, a, da;
    
    printf("Digite o tamanho do lado do quadrado:");
    scanf("%f", &l);
    a = l * l;
    da = 2 * a;
    printf("O dobro da area do quadrado que possui o lado informado eh %.2f", da);
    system("pause");
}

Questão 12 :

#include<stdio.h>

int main(){
    int h, m, s;
    
    printf("Digite quanto voce ganha por hora: ");
    scanf("%d", &h);
    printf("Digite quantas horas voce trabalha no mes: ");
    scanf("%d", &m);
    s = h * m;
    printf("Voce ganha no mes %d", s);
    system("pause");
}

Questão 13 :

#include <stdio.h>
#include <stdlib.h>

int main(){
    float f, c;
    
	printf("Digite uma temperatura em graus Fahrenheit\n");
    scanf("%f", &f);
    
    c = (5 * (f-32) / 9) ;    
    
    printf("A temperatura equivale a %.2f graus celsius", c);
    return 0;
  }

Questão 14 :

#include <stdio.h>
#include <stdlib.h>

int main(){
    float f, c;
    
	printf("Digite uma temperatura em graus Celsius\n");
    scanf("%f", &c);
    
    f = ((c * 1.8) + 32);
    
    printf("A temperatura equivale a %.2f graus Fahrenheit", f);
    return 0;
  }

Questão 15 :
A, B e C juntas.

#include<stdio.h>
#include<stdio.h>

int main(){
    int x, y, a ;
    float z, b, c ;
    printf("Digite dois numeros inteiros e um real ");    
    scanf("%d", &x);
    scanf("%d", &y);
    scanf("%f", &z);
    a = (2 * x) * (y / 2);  
    b = (3 * a) + z;
    c = z * z * z;    
    printf("A resposta da letra A eh: %d\nA letra B eh: %2.f\n A letra C eh: %2.f\n", a, b, c);
    system("pause");
}

Questão 16 :

#include<stdio.h>

int main(){
    float peso, altura, pideal;
   
    printf("Digite o seu peso e altura");
    scanf("%f", &peso);
    scanf("%f", &altura);
    pideal = (72.7*altura) - 58;
    printf("O seu peso ideal eh : %fkg\n", pideal);

    system("pause");
}

Questão 17 :
//Admitindo que o peso ideal é exatamente o da fórmula

#include<stdio.h>

int main(){
    float altura, peso, pideal;
    char sexo;
    
    printf("Digite a sua altura :");
    scanf("%f", &altura);
    printf("Digite o seu sexo : \nf para Feminino e m para masculino(Em minusculo)\n");
    scanf("%s", &sexo);
    
    if(sexo == 'm'){
        pideal = (72.7*altura) - 58;    
        printf("Digite o seu peso");
        scanf("%f", &peso);
        if(peso == pideal){
            printf("Voce esta com o peso ideal\n");
        }        
        if(peso > pideal){
            printf("Voce esta acima do peso\n");
        }
        else{
            printf("Voce esta abaixo do peso\n");
        }
    }
    if(sexo == 'f'){
        pideal = (62.1*altura) - 44.7;
        printf("Digite o seu peso");
        scanf("%f", &peso);
        if(peso == pideal){
            printf("Voce esta com o peso ideal\n");
        }
        if(peso > pideal){
            printf("Voce esta acima do peso\n");
        }
        else{
            printf("Voce esta abaixo do peso\n");
        }
    }
    system("pause");
}


#include<stdio.h>
#include<stdlib.h>
#include <string.h>
#define MAX 20	

int main (void ) {
				   int i = 0;
                   char linha[MAX];
                   FILE *pa;
                   
				   char nome[20];
                   char nome2[20];
                   
                   char arq1[1000];
                   char arq2[1000];
                   char arq3[2000];
                   
                   printf("Digite nome do arquivo 1. Ex: a.txt\n");
                   scanf("%s", &nome);
                   printf("Digite nome do arquivo 2.\n");
                   scanf("%s", &nome2);
                   
                   /* Abre o arquivo para leitura e escrita */
                   if (( pa = fopen(nome, "r")) == NULL) {
                                           printf("\n\nNao foi possivel abrir o arquivo.\n");
                                           exit(1);
                   }
                   while (!feof(pa)) {
                                           
                                           strcat(arq1, linha);
										   fgets(linha, MAX, pa);
                   }
                   fclose(pa);
                   
				   if (( pa = fopen(nome2, "r")) == NULL) {
                                           printf("\n\nNao foi possivel abrir o arquivo.\n");
                                           exit(1);
                   }
                   while (!feof(pa)) {
                                           
                                           strcat(arq2, linha);
										   fgets(linha, MAX, pa);
                   }                  
                   
				   strcat(arq1, arq2);
                   printf("%s", arq1);
                  
				   fclose(pa);
				   getchar(); /* Espera o usuario digitar alguma coisa */
}

#include<stdio.h>
#include<stdlib.h>

int x;

lerX(){
	printf("Digite um numero inteiro. Digite um numero inteiro negativo para sair e saber o maior e menor numero digitado\n");
	scanf("%d", &x);	
}

int nums(){
	int maior, menor;

    if(x >= 0){
        maior = x ;	
		menor = x ;	
    }	
	while (x >= 0){
		printf("Digite um numero inteiro. Digite um numero inteiro negativo para sair e saber o maior e menor numero digitado\n");
		scanf("%d", &x);
		if(x < 0){
			printf("O maior numero digitado foi %d\nE o menor foi %d\n", maior, menor);
		}
		if(x > maior){
			maior = x ;	
		}
		if(x < menor){
			menor = x ;	
		}
	}
	system("pause");

}

int main(){

lerX();
nums();
return 0;
}

#include <stdio.h>
#include <stdlib.h>
  
void vet(){
	int v[10], maior = 0 ,p = 0, i;

	for(i = 0; i < 10; i++){
		printf("Digite um numero inteiro");
		scanf("%d", &v[i]);	
		if(v[i] > maior){
			maior = v[i];
			p = i;
		}
}
printf("O maior numero digitado foi %d e esta alocado na posicao %d do vetor", maior, p);
}  
  
int main(){
vet();

return 0;
}
